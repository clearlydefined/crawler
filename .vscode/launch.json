{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ClearlyDefined",
      "program": "${workspaceRoot}/run.js",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "localhost",
        "CRAWLER_OPTIONS": "./config/cdConfig"
      },
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "${workspaceRoot}/test/unit/*.js"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "localhost"
      },
      "console": "internalConsole"
    },
    {
      "name": "Coverage",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/istanbul/lib/cli.js",
      "stopOnEntry": false,
      "args": [
        "cover",
        "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "${workspaceRoot}/test/unit/*.js"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "localhost"
      },
      "console": "internalConsole"
    }
  ]
}